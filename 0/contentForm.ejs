<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Content Development Form</title>
</head>
<body>
    <h2>Content Development Form</h2>
    <% if (typeof error !== 'undefined') { %>
        <p style="color:red;"><%= error %></p>
    <% } %>
    <form action="/content" method="POST" enctype="multipart/form-data">
        <label>Request Type:</label>
        <select name="requestType" required>
            <% requestTypes.forEach(function(rt) { %>
                <option value="<%= rt._id %>"><%= rt.type %></option>
            <% }) %>
        </select><br>
        <label>Request Title:</label>
        <input type="text" name="requestTitle" required><br>
        <label>Due Date:</label>
        <input type="date" name="dueDate" required><br>
        <label>Point of Contact:</label>
        <input type="text" name="pointOfContact" required><br>
        <label>Details:</label>
        <textarea name="details"></textarea><br>
        <label>Upload File:</label>
        <input type="file" name="file"><br>
        <label>Add Approval (Your registered email):</label>
        <input type="email" name="approval" required><br>
        <button type="submit">Submit</button>
    </form>
    <br>
    <a href="/home">Back to Home</a>
</body>
</html>