<h1>Manage Tools</h1>

<!-- Add New Tool -->
<form action="/admin/tools/add" method="POST" style="margin-bottom: 20px;">
  <label>Tool Name:</label>
  <input type="text" name="toolName" required>
  <button type="submit">Add Tool</button>
</form>

<!-- Existing Tools List -->
<table border="1" cellpadding="8">
  <thead>
    <tr>
      <th>Tool Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% tools.forEach(tool => { %>
      <tr>
        <td><%= tool.name %></td>
        <td>
          <!-- Delete Button -->
          <form action="/admin/tools/<%= tool._id %>/delete" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this tool?');">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>



