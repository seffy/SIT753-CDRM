<h1>All Submitted Tools Access Requests</h1>

<% if (requests.length === 0) { %>
  <p>No requests found.</p>
<% } else { %>
  <table border="1" cellpadding="8">
    <thead>
      <tr>
        <th>Request ID</th>
        <th>Tool Name</th>
        <th>Request For</th>
        <th>Submitted By</th>
        <th>Status</th>
        <th>Date & Time Submitted</th>
        <th>View / Update</th>
      </tr>
    </thead>
    <tbody>
      <% requests.forEach(request => { %>
        <tr>
          <td><%= request.requestID %></td>
          <td><%= request.toolName %></td>
          <td><%= request.requestFor %></td>
          <td><%= request.submittedBy %></td>
          <td><%= request.status %></td>
          <td><%= request.createdAt.toLocaleString() %></td>
          <td>
            <a href="/tools/<%= request._id %>/edit">View / Update</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>


